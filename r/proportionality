# Docker inheritance
FROM bioconductor/bioconductor_docker:devel

# install optparse, zcompositions
RUN R -e "install.packages(c('optparse', 'zCompositions', 'doMC'),  repos='http://cran.es.r-project.org')"

# install recount
RUN R -e "BiocManager::install('recount')"

# install propr
# RUN R -e "BiocManager::install('propr')"
RUN R -e "devtools::install_github('tpq/propr')"

# install graflex
RUN -R -e "devtools::install_github('tpq/graflex')"
