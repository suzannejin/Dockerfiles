FROM rocker/tidyverse:3.6.0

RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    less \
    vim-tiny

## install biocmanager
RUN R -e "install.packages('BiocManager', repos='http://cran.es.r-project.org')"

## install dependencies for recount2
RUN R -e BiocManager::install(c("GenomicFeatures", "AnnotationDbi"))

## install recount2
RUN R -e "BiocManager::install('recount')"

